<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90cde1">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:paddingTop="0dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Show text-->
            <TextView
                android:id="@+id/txt1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#106aa9"
                android:gravity="center"
                android:paddingTop="20dip"
                android:paddingBottom="20dp"
                android:text="Thông tin chuyến đi"
                android:padding="10dp"
                android:textSize="30sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/txt02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ 5 ngày 21/12/2014"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:textSize="25sp" />



            <com.example.tnguyen.myapp_driver.class_lib.NonScrollListView
            android:paddingLeft="30dp"
            android:id="@+id/timeline_listView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />


            <!-- Show place free1 -->
            <LinearLayout
            android:id="@+id/layout_4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_car_seat"
                android:id="@+id/layout_4_1"
                android:layout_width="90dip"
                android:layout_height="90dip" />
            <ImageView
                android:src="@drawable/ic_car_seat2"
                android:id="@+id/layout_4_2"
                android:layout_width="90dip"
                android:layout_height="90dip" />
            <ImageView
                android:src="@drawable/ic_car_seat2"
                android:id="@+id/layout_4_3"
                android:layout_width="90dip"
                android:layout_height="90dip" />
            <ImageView
                android:src="@drawable/ic_car_seat"
                android:id="@+id/layout_4_4"
                android:layout_width="90dip"
                android:layout_height="90dip" />


        </LinearLayout>

            <TextView
            android:id="@+id/txt2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Xe còn 4 chỗ trống"
            android:padding="10dp"
            android:textSize="25sp" />
            <!-- Show place free -->

            <!-- Show button reserver -->
            <Button
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#70a6cd"
            android:gravity="center"
            android:text="đặt vé ngay"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="25sp" />

        </LinearLayout>

        <!-- Show info -->

        <!--  thông tin tài xế -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44ff44"
        android:orientation="vertical">

            <!--  thông tin tài xế -->
            <TextView
                android:padding="10dp"
                android:paddingTop="20dip"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin tài xế"
                android:background="#027d0b"
                android:textSize="30dip"/>

            <!--  hình đại diên -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"></View>

            <!--  text thông tin -->
            <LinearLayout
                android:paddingTop="20dip"
                android:paddingLeft="20dip"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout">

                <!--  hình đại diện -->
                <LinearLayout
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/image_bg"
                    android:padding="3dip">

                    <ImageView
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:contentDescription="TODO" />
                    <!--android:src="@drawable/rihanna"-->

                </LinearLayout>

                <!--  text họ và tên -->
                <LinearLayout
                android:id="@+id/profil_driver1"
                android:paddingStart="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_drive1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Thành Trung"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/diver_driver1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuổi 35 , Giới tính : Nam "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:paddingTop="10dip"
                    android:id="@+id/diver_driver2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating xxxx/xxx"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </LinearLayout>
            <!-- Show commentaire -->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.curtisboylan.myapplication.SearchScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/textCity"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textStartTime"
            android:layout_width="fill_parent"
            android:layout_height="152dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"
            android:background="#b8b8fd"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_date_from"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="   Rental Start \n   Date and Time"
            android:textColor="#3f51b5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textEndTime"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textStartTime"
            android:background="#9898fb"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_date_to"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="   Rental End \n   Date and Time"
            android:textColor="#3f51b5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/main_search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textEndTime"
            android:layout_gravity="center_horizontal"
            android:text="@string/search_button"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>
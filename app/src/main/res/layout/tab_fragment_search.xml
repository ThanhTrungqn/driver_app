<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:paddingTop="50dp">

        <!-- text from where-->
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:clickable="true"
            android:duplicateParentState="true"
            android:id="@+id/search_city_from_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:text="Điểm đến"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:src="@drawable/ic_position" />

            <TextView
                android:clickable="false"
                android:id="@+id/search_city_from_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:text="Chọn điểm đến"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:background="@color/white" />
        </GridLayout>


        <!-- text where to-->
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:clickable="true"
            android:duplicateParentState="true"
            android:id="@+id/search_city_to_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:text="Điểm đến"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:src="@drawable/ic_position" />

            <TextView
                android:clickable="false"
                android:id="@+id/search_city_to_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:text="Chọn điểm đến"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:background="@color/white" />
        </GridLayout>

        <!-- text date-->
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:clickable="true"
            android:duplicateParentState="true"
            android:id="@+id/search_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:text="Ngày đi"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:clickable="false"
                android:id="@+id/search_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:text="Chọn ngày"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:background="@color/white" />
        </GridLayout>

        <!-- text time-->
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:clickable="true"
            android:id="@+id/search_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:text="Bắt đầu từ"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/search_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:text="Chọn giờ"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:background="@color/white" />
        </GridLayout>

        <!-- nbr places-->
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:clickable="true"
            android:id="@+id/search_place_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:hint="where from"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:src="@drawable/ic_people" />

            <EditText
                android:id="@+id/search_place_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:hint="where from"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25sp" />

        </GridLayout>

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search"
            />


    </LinearLayout>

</ScrollView>